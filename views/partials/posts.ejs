<div class="container mt-4">
  <h1>Lista de Posts</h1>

  <% posts. forEach(post => { %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= post.titulo %></h5>
      <p class="card-text"><%= post.conteudo %></p>
    </div>
  </div>
  <%  }); %>
</div>

<style>
  .card-title{
    border-bottom: 1px solid black;
    width: 180px; 
  }

.card-body{
  border: 1px solid black;
}
.card-body:hover{
  box-shadow: black;
}

</style>